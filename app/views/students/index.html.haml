- breadcrumb :students
= link_to t('shared.add_new_item'), new_student_path, class: 'btn btn-default'
%table.table.table-condensed
  %thead
    %tr
      %th= t('student.columns.first_name')
      %th= t('student.columns.last_name')
      %th= t('shared.in_debt')
      %th= t('student.columns.birthdate')
      %th= t('student.columns.start_date')
      %th= t('student.columns.end_date')
      %th= t('shared.actions')
  %tbody
    = render students
