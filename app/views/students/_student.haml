%tr
  %td= student.first_name
  %td= student.last_name
  %td
    - unless student.in_debt?
      = fa_icon 'thumbs-o-up'
    - else
      = fa_icon 'thumbs-down'
  %td= student.birthdate
  %td= student.decorate.study_date(student.start_date)
  %td= student.decorate.study_date(student.end_date)
  %td
    = link_to student_path(student), { title: t('shared.show') } do
      %button.btn.btn-default
        = fa_icon "search"
    = link_to edit_student_path(student), { title: t('shared.edit') } do
      %button.btn.btn-default
        = fa_icon "edit"
    = link_to student_path(student), { method: :delete, title: t('shared.delete') } do
      %button.btn.btn-default
        = fa_icon "times"
    = link_to student_subjects_path(student), { title: t('shared.show_subject_items') } do
      %button.btn.btn-default
        = fa_icon "list"
